    	<script type="text/javascript">
        	$( document ).ready(function(){
            	$(".button-collapse").sideNav();
            	
            	if (location.search != '' ||  location.hash != '') {
            		$( "#welcomeLogin" ).show();
            		$("#background").addClass("darker");
            		$( "#welcomeText" ).hide();
            	}
            	
            	//Permite que a tela de login apareça ao recarregar a página em tamanho mobile
                if  ($(window).width() < 993) {
                   $("#background").addClass("darker");
                   $( "#welcomeLogin" ).show();
                }
            	
            	$("#getStarted").click(function(){
                    $( "#welcomeLogin" ).show();
                    $( "#welcomeText" ).hide();
                    $("#background").addClass("darker");
                    $(this).data('clicked', true);
                });
            	
            	//Responsavel pela mudança de brightness no background e
                //do texto que deve aparecer na tela
                $(window).resize(function() {
                  if ($(window).width() < 993) {
                    $("#background").addClass("darker");
                    $( "#welcomeLogin" ).show();
                  }
                  else {
                    if ($('#welcomeLogin').is(':visible') && $("#getStarted").data('clicked')){
                       $( "#welcomeText" ).hide();
                     }
                    else {
                    	if (location.search == '' ||  location.hash == '') {
                    		alert("why !!");
                    		$( "#welcomeLogin" ).hide();
                            $("#background").removeClass("darker");
                            $( "#welcomeText" ).show();
                    	}
                    }
                  }
                });
            	
        	});
    	</script>
  
  		
	</head>

